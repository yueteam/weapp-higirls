/**settings.wxss**/
.container {
	background-color: #ebeced;
}
.photos {
	background: #fff;
}
.avatar-wrapper {
	position: relative;
	float: left;
	width: 375rpx;
	height: 375rpx;
}
.avatar {
	width: 375rpx;
	height: 371rpx;
}
.album {
	float: left;
	width: 375rpx;
	height: 375rpx;
}
.album .photo {
	float: left;
	margin: 0 0 2rpx 2rpx;
	width: 185rpx;
	height: 185rpx;
	background: #f5f5f5;
}

.settings {
	font-size: 16px;
}
.settings .title {
	padding: 20px 15px 7px;
	color: #999;
}
.settings .mod {
	padding-left: 15px;
	background: #fff;
	border-top: 1px solid #f2f2f2;
	border-bottom: 1px solid #f2f2f2;
}
.settings .field {
	display: flex;
	align-items: center;
	height: 44px;
	border-bottom: 1px solid #f2f2f2;
}
.settings .field:last-child {
	border-bottom: 0;
}
.settings .field .cell-label {
	width: 90px;
	color: #8a8f9c;
}
.settings .field .cell-value {
	flex: 1;
	display: flex;
}
.settings .field input, .settings .field picker {
	width: 100%;
	flex: 1;
}
.settings .field .picker {
	width: 100%;
	height: 26px;
	line-height: 26px;
	overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.settings .btn-submit {
	margin: 15px;
	background-color: #FF404F;
}
.gray {
	color: #ccc;
}